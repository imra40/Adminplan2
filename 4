<script>
document.getElementById("welcome").innerText =
"Welcome " + localStorage.getItem("user");

document.getElementById("roleText").innerText =
localStorage.getItem("role");

function logout(){
    localStorage.clear();
    window.location.href="index.html";
}
</script>

