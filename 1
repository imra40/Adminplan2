<body>

<!-- LOGIN -->
<div class="login-box active" id="loginBox">
    <h2>Ultra Secure Portal</h2>

    <label>Login As</label>
    <select id="role">
        <option>Admin</option>
        <option>Reseller</option>
        <option>User</option>
    </select>

    <label>Username</label>
    <input type="text" id="username">

    <label>Password</label>
    <input type="password" id="password">

    <button class="btn" onclick="login()">SIGN IN</button>
</div>

<!-- PORTAL -->
<div class="portal" id="portal">
    <h2 id="welcome"></h2>

    <div class="portal-box">
        <p><b>Status:</b> Logged In</p>
        <p><b>Access Level:</b> <span id="access"></span></p>
    </div>

    <button class="btn logout" onclick="logout()">LOGOUT</button>
</div>

<script>
function login(){
    let role=document.getElementById("role").value;
    let user=document.getElementById("username").value;
    let pass=document.getElementById("password").value;

    let valid=false;

    if(role==="Admin" && user==="admin" && pass==="admin123") valid=true;
    if(role==="Reseller" && user==="reseller" && pass==="res123") valid=true;
    if(role==="User" && user==="user" && pass==="user123") valid=true;

    if(valid){
        document.getElementById("loginBox").classList.remove("active");
        document.getElementById("portal").classList.add("active");
        document.getElementById("welcome").innerText="Welcome "+user;
        document.getElementById("access").innerText=role;
    }else{
        alert("Invalid Login Details");
    }
}

function logout(){
    document.getElementById("portal").classList.remove("active");
    document.getElementById("loginBox").classList.add("active");
}
</script>

</body>
